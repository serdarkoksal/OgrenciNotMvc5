@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>Öğrenci</th>
        <th>DERS</th>
        <th>Sınav1</th>
        <th>Sınav2</th>
        <th>Sınav3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>Güncelle</th>


    </tr>
    <tbody>
        @foreach (var snv in Model)
        {
        <tr>
            <td>@snv.NotID</td>
            <td>@snv.OgrID</td>
            <td>@snv.DersID</td>
            <td>@snv.Sınav1</td>
            <td>@snv.Sınav2</td>
            <td>@snv.Sınav3</td>
            <td>@snv.Proje</td>
            <td>@snv.Ortlama</td>
            <td>@snv.Durum</td>
            <td><a href="/Notlar/NotGetir/@snv.NotID" class="btn btn-warning">Güncelle</a></td>



        </tr>
        }
    </tbody>
</table>
<a href="/Notlar/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>
